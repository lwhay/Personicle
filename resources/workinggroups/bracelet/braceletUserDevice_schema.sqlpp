USE Personicle;

DROP DATASET BraceletDevice IF EXISTS;

DROP TYPE BraceletDeviceType IF EXISTS;

CREATE TYPE BraceletDeviceType AS OPEN {
  deviceId: string, --guarantee identification in application, e.g., UUID
  name: string,
  userId: string,
  userName: string?,
  netId: string,
  rssi: string,
  mac: string,
  manufacturerData: string,
  isConnected: boolean,
  selected: boolean
};

CREATE DATASET BraceletDevice(BraceletDeviceType) PRIMARY KEY deviceId;